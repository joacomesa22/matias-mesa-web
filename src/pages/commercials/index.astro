<style lang="scss">
  .hero-commercials {
    background-position: top;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 60vh;
    background-image: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.4),
        rgba(0, 0, 0, 0.4)
      ),
      url(../img/soldadura.jpg);

    h1 {
      font-size: var(--fontXXL);
